.socials__list {
  display: flex;
  justify-content: center;
  align-items: center;
}

.socials__item {
  &:not(:last-child) {
    margin-right: 40px;
  }
}

.socials__icon {
  display: block;
  fill: $text-color;
  transition: fill 0.3s;
  width: 25px;
  height: 25px;

  &:hover {
    fill: $main-color;
  }
}