.stack-row__list {
  display: flex;
  flex-wrap: wrap;
  margin-left: -3%;

  @include big-phones {
    flex-wrap: wrap;
  }
}

.stack-row__title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 4%;

  @include mini-desktop {
    text-align: center;
  }
}

.stack-row__item {
  display: flex;
  align-items: center;
  margin-left: 3%;
  margin-bottom: 3%;

  &:last-child {
    margin-right: 0;
  }

  @include phones {
    flex: 1 0 50%;
  }
}
